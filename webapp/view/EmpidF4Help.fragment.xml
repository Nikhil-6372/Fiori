<core:FragmentDefinition xmlns="sap.m" xmlns:core="sap.ui.core">
<Dialog Title="Select an Employee">
  <ScrollContainer horizontal="true" vertical="true">
                <Table  items="{empModel>/EmployeeSet}">
                  <headerToolbar>
                    <Toolbar>
                      <Title text="Select one Employee"></Title>
                    </Toolbar>
                  </headerToolbar>
                    <columns>
                        <Column><Text text="Employee ID"/></Column>
                        <Column><Text text="Name"/></Column>
                        <Column><Text text="Designation"/></Column>
                    </columns>
                    <items>
                        <ColumnListItem type="Active" press="onPressRowFromF4Help">
                            <cells>
                                <Text text="{empModel>Empid}"/>
                                <Text text="{empModel>Name}"/>
                                <Text text="{empModel>Designation}"/>
                                
                            </cells>
                        </ColumnListItem>
                    </items>
                </Table>
            </ScrollContainer>
            <endButton>
              <Button text="Close" type="Reject" press="onPressClose"></Button>
            </endButton>
</Dialog>
</core:FragmentDefinition>