<mvc:View
    controllerName="com.demo.zn07ui5app.controller.View4"
    xmlns:mvc="sap.ui.core.mvc"
    displayBlock="true"
    xmlns="sap.m"
    xmlns:f="sap.ui.layout.form"
    xmlns:core="sap.ui.core">

    <Page
        id="page"
        title="Update Employee"
        showNavButton="true"
        navButtonPress="onBackToView1">

        <content>
            <f:SimpleForm
                editable="true"
                layout="ResponsiveGridLayout"
                labelSpanL="2"
                labelSpanM="2"
                emptySpanL="5"
                emptySpanM="5">

              <f:content>
    <Label text="Employee ID" required="true" />
    <Input id="idEmp" value="{empModel>Empid}" editable="false"/>

    <Label text="Name" required="true" />
    <Input id="idName" value="{empModel>Name}" />

    <Label text="Designation" required="true" />
    <Input id="idDesig" value="{empModel>Designation}" />

    <Label text="Skill" required="true" />
    <Input id="idSkill" value="{empModel>Skill}" />

    <Label text="Email" required="true" />
    <Input id="idEmail" value="{empModel>Email}" />

    <Label text="Phone No" required="true" />
    <Input id="idPhone" value="{empModel>Phone}" />

    <Label text="Salary" required="true" />
    <Input id="idSalary" value="{empModel>Salary}" />

    <Label text="Status" required="true" />
    <Input id="idStatus" value="{empModel>Status}" />

    <Label text="Date of Joining" required="true" />
    <DatePicker id="idDoj" value="{empModel>Doj}"/>
</f:content>


            </f:SimpleForm>
        </content>

        <footer>
            <Bar>
                <contentRight>
                   <Button text="Update" press="onPressUpdate" type="Critical"/>
                   <Button text="Cancel" press="onNavBack" type="Negative"/>
                </contentRight>
            </Bar>
        </footer>

    </Page>
</mvc:View>
