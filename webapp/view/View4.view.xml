<mvc:View
    controllerName="com.demo.zn07ui5app.controller.View4"
    xmlns:mvc="sap.ui.core.mvc"
    displayBlock="true"
    xmlns="sap.m"
    xmlns:f="sap.ui.layout.form"
    xmlns:core="sap.ui.core">

    <Page
        id="page"
        title="Update Employee"
        showNavButton="true"
        navButtonPress="onBackToView1">

        <content>
            <f:SimpleForm
                editable="true"
                layout="ResponsiveGridLayout"
                labelSpanL="2"
                labelSpanM="2"
                emptySpanL="5"
                emptySpanM="5">

                <f:content>
                    <Label text="Employee ID" required="true" />
                    <Input id="idEmp" />

                    <Label text="Name" required="true" />
                    <Input id="idName" />

                    <Label text="Designation" required="true" />
                    <Input id="idDesig" />

                    <Label text="Skill" required="true" />
                    <Input id="idSkill" />

                    <Label text="Email" required="true" />
                    <Input id="idEmail" />

                    <Label text="Phone No" required="true" />
                    <Input id="idPhone" />

                    <Label text="Salary" required="true" />
                    <Input id="idSalary" />

                    <Label text="Status" required="true" />
                    <Input id="idStatus" />

                    <!-- <Label text="Date of Joining" required="true" />
                    <DatePicker id="idDoj" /> -->
                </f:content>

            </f:SimpleForm>
        </content>

        <footer>
            <Bar>
                <contentRight>
                   <Button text="Save" press="onPressSave" type="Accept"/>
                   <Button text="Cancel" press="onPressCancel" type="Emphasized"/>
                </contentRight>
            </Bar>
        </footer>

    </Page>
</mvc:View>
